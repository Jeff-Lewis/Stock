<h1>Listing tweets</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Image</th>
    <th>Userid</th>
    <th>Stockid</th>
    <th>Erdateid</th>
    <th>created_at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= image_tag tweet.image.url(:thumb) %></td>
        <td><%= link_to tweet.user_id, tweet.user.profile %></td>
        <td><%= link_to tweet.stock_id, tweet.stock %></td>
        <td><%= link_to tweet.erdate_id, tweet.erdate %></td>
        <td><%= tweet.created_at %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

